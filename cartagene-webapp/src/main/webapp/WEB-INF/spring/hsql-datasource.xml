<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
    <property name="driverClassName" value="org.hsqldb.jdbcDriver" />
    <!--property name="url" value="jdbc:hsqldb:file:target/cartagene-webapp.db;shutdown=true"/-->
    <property name="url" value="jdbc:hsqldb:mem:cartagene-webapp" />
    <property name="username" value="sa" />
    <property name="password" value="" />
  </bean>

  <bean id="hibernateDbConfig" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
    <property name="properties">
      <value>
        <![CDATA[
            hibernate.hbm2ddl.auto=update
            hibernate.dialect=org.hibernate.dialect.HSQLDialect
          ]]>
      </value>
    </property>
  </bean>

</beans>